                //click chọn bưu cục
                $(".cslide-next.choose-unit").click(function () {
                    var IDs = [];
                    $("#lstMapHuyen").find("li.active").each(function () { IDs.push(this.id); });
                    if (IDs.length == 0) {
                        messageErrorShow("Bạn chưa chọn huyện nào !");
