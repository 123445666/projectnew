                        currentlisthuyen = danhSachHuyen;
                        $.ajax({
                            type: "POST",
                            url: serviceURL,
                            data: { 'lstUnit': danhSachHuyen, 'DieuChinhKHXBDetailId': mabao, 'typestr': '2' },
                            dataType: "json",
                            success: function (data, status) {
                                $("#lstMapBuuCuc").html(data.responseText);
