        .dual-list .list-group {
            margin-top: 8px;
            max-height: 400px;
            overflow: auto;
        }

        .list-left li, .list-right li {
            cursor: pointer;
        }

        .list-arrows {
            padding-top: 100px;
        }

            .list-arrows button {
                margin-bottom: 20px;
            }

