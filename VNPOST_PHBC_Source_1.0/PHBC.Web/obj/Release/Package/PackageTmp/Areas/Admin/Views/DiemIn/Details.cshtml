@using Webdiyer.WebControls.Mvc;
@using PHBC.Web.Permission;
@model PHBC.DAO.Models.DMDiemInModel
@using PHBC.Web.Constants
@{
    ViewBag.Title = Application.ButtonLabel.Details + ViewBag.TitleName;
    PermissonController permisson = ViewBag.Permisson as PermissonController;
}


<div class="panel panel-primary">
    <div class="panel-heading">
        @Application.ButtonLabel.Details @ViewBag.TitleName
    </div>
    <div class="panel-body">
        @Html.Partial("_viewDetail", Model)
        <p>
            @Html.CustomLink(Application.ButtonLabel.ToEdit, ActionType.Edit, permisson, new { id = Model.Id }, new { @class = "btn btn-default" })
            @Html.ActionLink(Application.ButtonLabel.Back, "Index", null, new { @class = "btn btn-default" })
        </p>
</div>
</div>