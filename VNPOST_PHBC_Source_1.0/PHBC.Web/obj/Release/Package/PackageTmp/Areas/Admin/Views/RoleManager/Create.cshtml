@model PHBC.DAO.Models.AspNetRoleModel
@using PHBC.Web.Constants

@{
    ViewBag.Title = Application.FormLabel.Create + " " + ControllerDesc.Role;
}

<div class="panel panel-primary">
    <div class="panel-heading">
        @ViewBag.Title
    </div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                @Html.Partial("_inputForm", Model)

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="@PHBC.Web.Constants.Application.ButtonLabel.Save" class="btn btn-default" />
                        @Html.ActionLink(PHBC.Web.Constants.Application.ButtonLabel.Back, "Index", null, new { @class = "btn btn-default" })
                    </div>
                </div>
            </div>
        }
    </div>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @if (Model != null)
    {
        <script>
            $("document").ready(function () {
                    $('#Level').val('@Model.Level');
            });
        </script>
    }
}
