@model ErrorModel

@{
    ViewBag.Title = "Forbidden";
    ViewBag.Description = "Bạn không có quyền truy cập vào chức năng hiện tại !!!";
}

<div class="jumbotron text-center">
    <header>
        <h1><span aria-hidden="true" class="fa fa-ban text-danger"></span> @ViewBag.Title</h1>
    </header>
    <p>@ViewBag.Description</p>
    <a class="btn btn-primary btn-lg" href="@Url.RouteUrl(ControllerRoute.HomeGetIndex)"><span aria-hidden="true" class="fa fa-home"></span> Về trang chủ</a>
</div>