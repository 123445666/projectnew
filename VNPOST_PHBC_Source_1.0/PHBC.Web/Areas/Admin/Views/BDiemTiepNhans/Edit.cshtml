            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
<script>
    function fillDataToListUnit(result) {
        var content = "<div id='ListUnit'>" + result + "</div>";
        popupdanhmuc = new jPopup({
            show: true,
            close: false,
            title: '',
            width: 600,
            body: content,
            callbackFalse: function (event) {
                event.close();
            },
            falseTitle: 'Hủy bỏ'
        });
    }
</script>