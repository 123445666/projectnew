@model PHBC.Web.Models.SetPasswordViewModel
@using PHBC.Web.Constants
@{
    ViewBag.Title = "Đặt lại mật khẩu";
}

<div class="panel panel-primary">
    <div class="panel-heading">
        @ViewBag.Title
    </div>
    <div class="panel-body">

        <div class="form-title">
            Thông tin người dùng
        </div>
        <dl class="dl-horizontal">
            <dt class="col-md-2">
                @Html.LabelFor(model => model.UserName, new { @class = "control-label" })
            </dt>

            <dd class="col-md-10">
                @Html.DisplayFor(model => model.UserName)
            </dd>

            <dt class="col-md-2">
                @Html.LabelFor(model => model.DislayName, new { @class = "control-label" })
            </dt>

            <dd class="col-md-10">
                @Html.DisplayFor(model => model.DislayName)
            </dd>
            <dt class="col-md-2">
                @Html.LabelFor(model => model.UnitName, new { @class = "control-label" })
            </dt>

            <dd class="col-md-10">
                @Html.DisplayFor(model => model.UnitName)
            </dd>
        </dl>
        <div class="form-title">
            Đặt mật khẩu
        </div>
        @using (Html.BeginForm("SetPassword", "UserManager", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model=>model.Id)
            @Html.HiddenFor(model => model.UserName)
            @Html.HiddenFor(model => model.DislayName)
            @Html.HiddenFor(model => model.UnitName)
            @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.NewPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            </div>
        </div>
        <div>
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Application.ButtonLabel.Save" class="@Application.ButtonClass.Submit" />
                @Html.ActionLink(Application.ButtonLabel.Back, "Index", null, new { @class = Application.ButtonClass.Submit })
            </div>
        </div>
        }
</div>
</div>
@section Scripts{
    <script>
        $(document).ready(function () {
            lib.fromcontroler();
        });
    </script>
}