@model PHBC.DAO.Models.DMToaSoanModel
@using PHBC.Web.Constants
@{
    ViewBag.Title = Application.ButtonLabel.Delete + ViewBag.TitleName;
}

<div class="panel panel-primary">
    <div class="panel-heading">
        @Application.ButtonLabel.Delete @ViewBag.TitleName
    </div>
    <div class="panel-body">

        <h3 class="text-danger">@Application.FormMessage.Delete_Confirm</h3>
        <div>
            <hr />
            @Html.Partial("_viewDetail", Model)

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="@Application.ButtonLabel.Delete" class="@Application.ButtonClass.Submit" /> 
                    @Html.ActionLink(Application.ButtonLabel.Back, "Index", null, new { @class = Application.ButtonClass.Submit })
                </div>
            }
        </div>
</div>
</div>